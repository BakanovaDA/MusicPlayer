<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lab2.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/hollydolly"
                android:layout_width="200dp"
                android:layout_height="285dp"
                android:src="@drawable/hollydolly"
                android:background="@null" />
            <ImageButton
                android:id="@+id/crazyfrog"
                android:layout_width="200dp"
                android:layout_height="285dp"
                android:src="@drawable/crazyfrog"
                android:background="@null" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/jakarta"
                android:layout_width="200dp"
                android:layout_height="285dp"
                android:src="@drawable/jakarta"
                android:background="@null" />
            <ImageButton
                android:id="@+id/barbie"
                android:layout_width="200dp"
                android:layout_height="285dp"
                android:src="@drawable/barbie"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="0.5x"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:textSize="22sp"
                android:text="1x"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:textSize="22sp"
                android:text="1.5x"/>
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="390dp"
            android:layout_height="37dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/pause"
            app:layout_constraintEnd_toEndOf="parent" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="10dp"
                android:textSize="22sp"
                android:text="Стоп"/>
            <Button
                android:id="@+id/stop"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="10dp"
                android:textSize="22sp"
                android:text="Повтор"/>
            <Switch
                android:id="@+id/loop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Switch>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>